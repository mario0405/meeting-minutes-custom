{
    "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
    "productName": "protocolito",
    "version": "0.1.9",
    "identifier": "com.protocolito.ai",
    "build": {
        "frontendDist": "../out",
        "beforeBuildCommand": "pnpm build"
    },

    "app": {
        "windows": [{
            "title": "Protocolito",
            "width": 1100,
            "height": 700,
            "resizable": true,
            "fullscreen": false,
            "theme": "Light",
            "decorations": true
        }],
        "macOSPrivateApi": true,
        "security": {
            "csp": {
                "default-src": "'self'",
                "script-src": "'self' 'unsafe-inline' 'unsafe-eval'",
                "style-src": "'self' 'unsafe-inline'",
                "img-src": "'self' asset: https://asset.localhost data:",
                "connect-src": "'self' http://localhost:11434 http://localhost:5167 http://localhost:8178 http://127.0.0.1:11434 http://127.0.0.1:5167 http://127.0.0.1:8178 ws://localhost:3118 ws://127.0.0.1:3118 http://host.docker.internal:5167 http://host.docker.internal:8178 https://api.ollama.ai"
            },
            "dangerousDisableAssetCspModification": ["script-src", "style-src"],
            "assetProtocol": {
                "enable": true,
                "scope": [
                    "$APPDATA/**"
                ]
            },
            "capabilities": [{
                "identifier": "main",
                "description": "Main window capability with file system and media access",
                "windows": ["main"],
                "permissions": [
                    "fs:default",
                    "fs:allow-read-file",
                    "fs:read-all",
                    "fs:write-all",
                    "fs:allow-app-read",
                    "fs:allow-app-write",
                    "fs:allow-download-write",
                    "fs:allow-download-read",
                    "fs:scope-download",
                    "core:path:default",
                    "core:event:default",
                    "core:window:default",
                    "core:app:default",
                    "core:resources:default",
                    "core:menu:default",
                    "core:tray:default",
                    "core:window:allow-set-title",
                    "store:default",
                    "notification:default",
                    "notification:allow-is-permission-granted",
                    {
                        "identifier": "fs:scope",
                        "allow": [{ "path": "$APPDATA/*" }]
                    }
                ]
            }]
        }
    },
    "bundle": {
        "active": true,
        "targets": "all",
        "icon": [
            "icons/icon.png",
            "icons/app_icon.icns",
            "icons/app_icon.ico"
        ],
        "resources": [
            "templates/*.json"
        ]
    }
}
